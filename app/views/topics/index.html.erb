<div class="container">
	<div class="header">
		<h1>寇汀災情支援網</h1>
		<subtitle>Coding Recue Network</subtitle>
	</div>
	
	<% if @topic.errors.any? %>
	 <ul>
	   <% @topic.errors.full_messages.each do |msg| %>
	     <li><%= msg %></li>
	   <% end %>
	 </ul>
	<% end %>

	<%= simple_form_for @topic do |n| %>
		
		<div class="form-group">
	    <%= n.input :title, input_html: { class: "form-control"} %>
	   	<%= n.collection_select(:category_id, Category.all, :id, :name, prompt: "請選擇分類") %>
	    <%= n.input :content, input_html: { class: "form-control"} %>
	  </div>

		<%= n.submit 'POST', class: 'btn btn-warning' %>
		<%= link_to 'CANCEL', topics_path, class: 'btn btn-info' %>
	<% end %>

	<div class="pagination">
		<%= paginate @topics %>
	</div>

	<table class="table table-hover text-center">
		<tr>
			<th>類別</th>
			<th>標題</th>
			<th>建立日期</th>
			<th></th>
		</tr>
			<% @topics.each do |t| %>
		<tr>
				<td>【<%= t.category.name %>】</td>
				<td><%= link_to t.title, topic_path(t) %></td>
				<td><%= t.created_at.to_date %></td>
				<td>
					<%= link_to 'EDIT', edit_topic_path(t), class: "btn btn-primary btn-sm" %>
					<%= link_to 'DEL', topic_path(t), method: :delete, data:{ confirm: 'Are you sure ?' }, class: "btn btn-danger btn-sm" %>
				</td>
		</tr>
			<% end %>
	</table>

	<div class="pagination">
		<%= paginate @topics %>
	</div>
</div>